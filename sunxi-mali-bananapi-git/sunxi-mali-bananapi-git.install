	ln -s /usr/lib/mesa/libGLESv2.so.2.0.0 /usr/lib/libGLESv2.so.2.0.0

	if [ -e /usr/include/EGL/eglplatform.h.mesa-libgl ]; then
		mv /usr/include/EGL/eglplatform.h.mesa-libgl /usr/include/EGL/eglplatform.h
	fi
	if [ -e /usr/include/EGL/egl.h.mesa-libgl ]; then
		mv /usr/include/EGL/egl.h.mesa-libgl /usr/include/EGL/egl.h
	fi
	if [ -e /usr/include/EGL/eglext.h.mesa-libgl ]; then
		mv /usr/include/EGL/eglext.h.mesa-libgl /usr/include/EGL/eglext.h
	fi
	if [ -e /usr/include/KHR/khrplatform.h.mesa-libgl ]; then
		mv /usr/include/KHR/khrplatform.h.mesa-libgl /usr/include/KHR/khrplatform.h
	fi
	if [ -e /usr/include/GLES2/gl2ext.h.mesa-libgl ]; then
		mv /usr/include/GLES2/gl2ext.h.mesa-libgl /usr/include/GLES2/gl2ext.h
	fi
	if [ -e /usr/include/GLES2/gl2platform.h.mesa-libgl ]; then
		mv /usr/include/GLES2/gl2platform.h.mesa-libgl /usr/include/GLES2/gl2platform.h
	fi
	if [ -e /usr/include/GLES2/gl2.h.mesa-libgl ]; then
		mv /usr/include/GLES2/gl2.h.mesa-libgl /usr/include/GLES2/gl2.h
	fi
	if [ -e /usr/include/GLES/gl.h.mesa-libgl ]; then
		mv /usr/include/GLES/gl.h.mesa-libgl /usr/include/GLES/gl.h
	fi
	if [ -e /usr/include/GLES/glext.h.mesa-libgl ]; then
		mv /usr/include/GLES/glext.h.mesa-libgl /usr/include/GLES/glext.h
	fi
	if [ -e /usr/include/GLES/glplatform.h.mesa-libgl ]; then
		mv /usr/include/GLES/glplatform.h.mesa-libgl /usr/include/GLES/glplatform.h
	fi
}
